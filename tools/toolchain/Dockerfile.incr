COPY ./scripts/install_reflapack.sh /opt/cp2k-toolchain/scripts/
COPY ./scripts/install_mkl.sh /opt/cp2k-toolchain/scripts/
COPY ./scripts/install_acml.sh /opt/cp2k-toolchain/scripts/
