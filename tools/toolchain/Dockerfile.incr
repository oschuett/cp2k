COPY ./scripts/install_mpich.sh /opt/cp2k-toolchain/scripts/
COPY ./scripts/install_openmpi.sh /opt/cp2k-toolchain/scripts/
COPY ./scripts/install_mpi.sh /opt/cp2k-toolchain/scripts/
